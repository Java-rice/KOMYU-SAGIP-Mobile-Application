<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:radius="100dp"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:radius="100dp"
        android:background="@color/primary_red">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:id="@+id/contactButton"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/errorpic"/>
                <TextView
                    android:id="@+id/confirmationMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center"
                    android:text="Are you sure you want to continue?"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/countdownTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:textColor="#FFFFFF"
                android:background="#CC0707"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:shape="oval"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:id="@+id/message1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continuing will trigger the following actions:"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/message2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   1. Track location"
                android:textColor="#FFFFFF"
                android:layout_gravity="start"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/message3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   2. Send SOS to emergency contacts"
                android:textColor="#FFFFFF"
                android:layout_gravity="start"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/message4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   3. Call nearest police"
                android:textColor="#FFFFFF"
                android:layout_gravity="start"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/message5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you believe this is an error, tap 'Cancel'."
                android:textColor="#FFFFFF"
                android:layout_gravity="start"
                tools:ignore="HardcodedText"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:radius="100dp"
                android:background="@color/primary_red"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/procButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proceed"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginEnd="30dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"/>
                <Button
                    android:id="@+id/canButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:radius="20dp"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText"
                    android:textStyle="bold"
                    android:backgroundTint="#FFFFFF"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>