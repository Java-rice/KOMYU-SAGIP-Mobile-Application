<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="12dp"/> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- White arrow for the dropdown indicator -->
    <item android:right="8dp" android:left="8dp">
        <bitmap android:src="@drawable/ic_spinner_arrow_white" android:tint="@android:color/white"/>
    </item>

</layer-list>